{{<html}}
{{$main}}

<h1>{{page.title}}</h1>

<blockquote class="has-grid-3 warning">
    <p>This page is best viewed using a browser with css "grid3" support.</p>
</blockquote>

<div class="photo-grid">
    {{#photos}}
    <figure class="photo-item">
        <img class="photo-image" src="{{url}}?max_width=256" alt="{{description}}" loading="lazy">
        <div class="photo-metadata">
            {{focal-length}}mm | f/{{aperture}} | {{ shutter-speed }}s | ISO{{iso}}
        </div>
    </figure>
    {{/photos}}
</div>

{{/main}}
{{/html}}
