{{<html}}
{{$main}}

<h1>{{page.title}}</h1>

<div class="article-grid">
    {{#list}}
        <a class="article-item" href="{{url}}">
            <div class="article-image-wrapper">
                <img class="article-image {{#square}}square{{/square}}{{^square}}wide{{/square}}" src="{{site.baseURL}}/assets/{{page.slug}}/{{hero}}"loading="lazy">
            </div>

            <h2 class="article-title">{{title}}</h2>
            <p class="article-description">{{description}}</p>

            <div class="tags">
            {{#tags}}
                <span class="tag">{{.}}</span>
            {{/tags}}
            </div>
        </a>
    {{/list}}
</div>

{{/main}}
{{/html}}
