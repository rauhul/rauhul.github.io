{{<html}}
{{$main}}

<h1>{{page.title}}</h1>

{{> partials.grid3-warning}}

<div class="article-grid">
    {{#list}}
        <a class="article-item" href="{{url}}">
            <div class="article-image-wrapper">
                <img class="article-image profile-ratio" src="{{site.baseURL}}/assets/friends/{{hero}}"loading="lazy">
            </div>

            <div class="article-header">
                {{url}}
            </div>

            <h2 class="article-title">{{title}}</h2>
            <p class="article-description">{{description}}</p>

            <div class="tags">
            {{#tags}}
                <span class="tag">{{.}}</span>
            {{/tags}}
            </div>
        </a>
    {{/list}}
</div>

{{/main}}
{{/html}}
